<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="false"
    android:id="@+id/collapsedPanel">

    <ImageView
        android:id="@+id/collapsedPanelPodcastIcon"
        android:src="@drawable/ic_keyboard_arrow_up_black_36dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/collapsedPanelPlayButton"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" />
        <!--android:background="@drawable/ic_keyboard_arrow_up_black_36dp"-->

    <TextView
        android:id="@+id/collapsedPanelTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="left"
        android:maxLines="2"
        android:singleLine="false"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/collapsedPanelPlayButton"
        android:layout_toEndOf="@+id/collapsedPanelPodcastIcon"
        android:layout_toLeftOf="@+id/collapsedPanelPlayButton"
        android:layout_toRightOf="@+id/collapsedPanelPodcastIcon" />

    <ImageButton
        android:id="@+id/collapsedPanelPlayButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_play_circle_outline_black_36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:id="@+id/collapsedPanelMenuButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:src="@drawable/ic_more_vert_black_36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignTop="@+id/collapsedPanelPlayButton"
        android:layout_toEndOf="@+id/collapsedPanelTitleTextView"
        android:layout_toRightOf="@+id/collapsedPanelTitleTextView" />

</RelativeLayout>