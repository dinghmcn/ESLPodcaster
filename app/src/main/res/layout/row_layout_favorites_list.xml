<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardPreventCornerOverlap="false"
        android:foreground="?selectableItemBackground"
        android:id="@+id/favoriteCardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/favoriteIconImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_favorite_white_36dp"
                android:scaleType="center"
                android:tint="@color/cardRed"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/favoriteSubtitleTextView"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/favoriteTitleTextView"
                android:text="title"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/favoriteIconImageView"
                android:layout_toRightOf="@+id/favoriteIconImageView" />

            <TextView
                android:id="@+id/favoriteSubtitleTextView"
                android:text="subtitle"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_below="@+id/favoriteTitleTextView"
                android:layout_toEndOf="@+id/favoriteIconImageView"
                android:layout_toRightOf="@+id/favoriteIconImageView" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
